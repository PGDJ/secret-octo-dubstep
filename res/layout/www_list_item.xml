<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dip"
    android:background="@drawable/now_button" >
 
    <LinearLayout android:id="@+id/num_and_text_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">
 
        <ImageView
            android:id="@+id/list_image_num"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/num1"/>
        
        <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:textColor="#483D8B"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Text View"/>
 
    </LinearLayout>
    
	 <RelativeLayout
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:padding="3dp"
	     android:background="@color/custom_theme_color"
	     android:layout_below="@+id/num_and_text_container"
	     android:layout_centerHorizontal="true"
	     >
	     <Button
	        android:layout_centerHorizontal="true"
	        android:id="@+id/share_this"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"        
	        android:textColor="#F08080"
	        android:typeface="sans"
	        android:textStyle="bold"
	        android:text="@string/share"
	        android:background="@drawable/now_button_custom"/>
	    
	   </RelativeLayout>
 
</RelativeLayout>
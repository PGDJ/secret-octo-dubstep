<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
	<RelativeLayout
	    android:id="@+id/relativeLayoutQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/now_button_custom"
        >
    
	    <TextView
	        android:id="@+id/textViewQuestion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"
	        android:textColor="@color/magenta"
	        android:text="Blah blah blah blah blah blah blah blah blah" />
	    
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayoutQuestion"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:background="@android:color/white" >
  
        
        <TextView
	        android:id="@+id/textViewAnswer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:minLines="2"
	        android:autoLink="web"
	        android:textSize="18sp"
	        android:textColor="@color/cyan"
	        android:text="Blah blah blah blah blah blah blah blah blah" />

    </RelativeLayout>

</RelativeLayout>